<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>カード別予算管理</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.1.0/firebase-app.js";
        import { getFirestore, collection, onSnapshot, addDoc, deleteDoc, doc, query, getDocs, writeBatch } from "https://www.gstatic.com/firebasejs/11.1.0/firebase-firestore.js";
        import { getAuth, signInAnonymously } from "https://www.gstatic.com/firebasejs/11.1.0/firebase-auth.js";

        // Firebase Config - エラー防止のため空のオブジェクトで初期化
        let db, auth;
        const appId = 'card-budget-app';

        const INITIAL_CARDS = [
            { id: 'aeon', name: 'イオン', budget: 15000, color: '#ec4899' },
            { id: 'amazon', name: 'Amazon', budget: 15000, color: '#f97316' },
            { id: 'rakuten', name: '楽天', budget: 31000, color: '#e11d48' },
        ];

        let state = {
            items: [],
            activeTab: 'status',
            selectedCardId: 'aeon',
            user: null,
            isLoaded: false
        };

        async function init() {
            try {
                // 環境変数が存在するか確認し、存在しない場合はオフラインモードで動作させる
                if (typeof __firebase_config !== 'undefined') {
                    const firebaseConfig = JSON.parse(__firebase_config);
                    const app = initializeApp(firebaseConfig);
                    db = getFirestore(app);
                    auth = getAuth(app);

                    const userCredential = await signInAnonymously(auth);
                    state.user = userCredential.user;

                    const q = query(collection(db, 'artifacts', appId, 'users', state.user.uid, 'expenses'));
                    onSnapshot(q, (snapshot) => {
                        state.items = snapshot.docs.map(d => ({ id: d.id, ...d.data() }))
                            .sort((a, b) => b.timestamp - a.timestamp);
                        state.isLoaded = true;
                        render();
                    });
                } else {
                    // Firebase設定がない場合（ローカルテスト用）
                    console.log("Offline mode: Firebase config not found.");
                    state.isLoaded = true;
                    render();
                }
            } catch (e) {
                console.error("Initialization error:", e);
                state.isLoaded = true;
                render();
            }
        }

        window.addExpense = async () => {
            const amount = document.getElementById('amount').value;
            const note = document.getElementById('note').value;
            if (!amount) return;

            if (state.user) {
                await addDoc(collection(db, 'artifacts', appId, 'users', state.user.uid, 'expenses'), {
                    cardId: state.selectedCardId,
                    amount: Number(amount),
                    note: note,
                    timestamp: Date.now(),
                    date: new Date().toLocaleDateString('ja-JP', { month: 'numeric', day: 'numeric' })
                });
            } else {
                // オフライン時のダミー追加
                state.items.unshift({
                    id: Date.now().toString(),
                    cardId: state.selectedCardId,
                    amount: Number(amount),
                    note: note,
                    date: "本日"
                });
            }
            
            document.getElementById('amount').value = '';
            document.getElementById('note').value = '';
            state.activeTab = 'status';
            render();
        };

        window.deleteItem = async (id) => {
            if (state.user) {
                await deleteDoc(doc(db, 'artifacts', appId, 'users', state.user.uid, 'expenses', id));
            } else {
                state.items = state.items.filter(i => i.id !== id);
                render();
            }
        };

        window.resetMonthly = async () => {
            if (!confirm('今月のデータをすべてリセットしますか？')) return;
            if (state.user) {
                const snapshot = await getDocs(collection(db, 'artifacts', appId, 'users', state.user.uid, 'expenses'));
                const batch = writeBatch(db);
                snapshot.docs.forEach(d => batch.delete(d.ref));
                await batch.commit();
            } else {
                state.items = [];
                render();
            }
        };

        window.switchTab = (tab) => {
            state.activeTab = tab;
            render();
        };

        window.selectCard = (id) => {
            state.selectedCardId = id;
            render();
        };

        function render() {
            const root = document.getElementById('app');
            if (!state.isLoaded) {
                root.innerHTML = '<div class="flex items-center justify-center min-h-screen text-slate-400">読み込み中...</div>';
                return;
            }

            const cardData = INITIAL_CARDS.map(card => {
                const spent = state.items.filter(i => i.cardId === card.id).reduce((s, i) => s + i.amount, 0);
                return { ...card, spent, remaining: card.budget - spent, percent: Math.min(Math.round((spent/card.budget)*100), 100) };
            });
            const totalRemaining = cardData.reduce((s, c) => s + c.remaining, 0);

            root.innerHTML = `
                <div class="max-w-md mx-auto bg-white min-h-[600px] flex flex-col shadow-2xl rounded-3xl overflow-hidden mt-4">
                    <div class="bg-slate-900 p-6 text-white shrink-0">
                        <p class="text-[10px] opacity-60 font-bold tracking-widest uppercase">Total Remaining</p>
                        <h1 class="text-3xl font-black text-blue-400">¥${totalRemaining.toLocaleString()}</h1>
                    </div>

                    <div class="flex border-b bg-white shrink-0">
                        <button onclick="switchTab('status')" class="flex-1 py-4 text-xs font-bold ${state.activeTab === 'status' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-slate-400'}">状況</button>
                        <button onclick="switchTab('input')" class="flex-1 py-4 text-xs font-bold ${state.activeTab === 'input' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-slate-400'}">入力</button>
                        <button onclick="switchTab('history')" class="flex-1 py-4 text-xs font-bold ${state.activeTab === 'history' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-slate-400'}">履歴</button>
                    </div>

                    <div class="flex-1 overflow-y-auto p-4 bg-slate-50">
                        ${state.activeTab === 'status' ? renderStatus(cardData) : ''}
                        ${state.activeTab === 'input' ? renderInput() : ''}
                        ${state.activeTab === 'history' ? renderHistory(cardData) : ''}
                    </div>
                </div>
            `;
            lucide.createIcons();
        }

        function renderStatus(data) {
            return data.map(c => `
                <div class="bg-white p-4 rounded-2xl mb-3 shadow-sm border border-slate-100">
                    <div class="flex justify-between items-center mb-2">
                        <span class="font-bold text-slate-700">${c.name}</span>
                        <span class="text-lg font-black ${c.remaining < 0 ? 'text-red-500' : 'text-slate-800'}">¥${c.remaining.toLocaleString()}</span>
                    </div>
                    <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                        <div class="h-full" style="width: ${c.percent}%; background-color: ${c.color}"></div>
                    </div>
                </div>
            `).join('');
        }

        function renderInput() {
            return `
                <div class="space-y-4">
                    <div class="grid grid-cols-3 gap-2">
                        ${INITIAL_CARDS.map(c => `
                            <button onclick="selectCard('${c.id}')" class="p-3 rounded-xl border-2 text-xs font-bold ${state.selectedCardId === c.id ? 'border-blue-500 bg-blue-50 text-blue-700' : 'border-white bg-white text-slate-400'}">
                                ${c.name}
                            </button>
                        `).join('')}
                    </div>
                    <div class="bg-white p-6 rounded-2xl shadow-inner border">
                        <input id="amount" type="number" placeholder="金額を入力" class="w-full text-3xl font-black text-right border-b-2 mb-4 outline-none">
                        <input id="note" type="text" placeholder="メモ（任意）" class="w-full p-3 bg-slate-50 rounded-xl outline-none text-sm">
                    </div>
                    <button onclick="addExpense()" class="w-full py-4 bg-blue-600 text-white rounded-2xl font-black shadow-lg">保存する</button>
                </div>
            `;
        }

        function renderHistory(cardData) {
            return `
                <div class="space-y-2">
                    ${state.items.length === 0 ? '<p class="text-center py-10 text-slate-300 text-sm">履歴はありません</p>' : state.items.map(i => {
                        const c = cardData.find(x => x.id === i.cardId);
                        return `
                            <div class="bg-white p-3 rounded-xl flex justify-between items-center shadow-sm border border-slate-50">
                                <div class="text-sm">
                                    <p class="font-bold text-slate-700">${c?.name || '不明'}</p>
                                    <p class="text-[10px] text-slate-400">${i.date} ${i.note ? '| '+i.note : ''}</p>
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="font-bold">¥${i.amount.toLocaleString()}</span>
                                    <button onclick="deleteItem('${i.id}')" class="text-slate-300 hover:text-red-500"><i data-lucide="trash-2" class="w-4 h-4"></i></button>
                                </div>
                            </div>
                        `;
                    }).join('')}
                    <button onclick="resetMonthly()" class="w-full mt-6 py-3 text-red-500 font-bold text-xs bg-red-50 rounded-xl">今月のデータをリセット</button>
                </div>
            `;
        }

        window.onload = init;
    </script>
</head>
<body class="bg-slate-100">
    <div id="app"></div>
</body>
</html>
